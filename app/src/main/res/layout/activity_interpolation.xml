<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:layout_below="@+id/editText_a" android:layout_alignStart="@+id/editText_a"
            android:layout_marginTop="16dp" android:id="@+id/editText_b" android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="18dp" android:id="@+id/editText_N"
            android:layout_below="@+id/editText_b" android:layout_alignStart="@+id/editText_b"
            android:textAlignment="center"/>
    <TextView
            android:text="b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_alignBaseline="@+id/editText_b"
            android:layout_alignBottom="@+id/editText_b" android:layout_toStartOf="@+id/editText_a"
            android:textSize="18sp"/>
    <TextView
            android:text="N"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_alignBaseline="@+id/editText_N"
            android:layout_alignBottom="@+id/editText_N" android:layout_alignStart="@+id/textView2"
            android:textSize="18sp"/>
    <TextView
            android:text="n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_alignBaseline="@+id/editText_n"
            android:layout_alignBottom="@+id/editText_n" android:layout_alignStart="@+id/textView3"
            android:textSize="18sp"/>
    <TextView
            android:text="a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignBaseline="@+id/editText_a" android:layout_alignBottom="@+id/editText_a"
            android:layout_toStartOf="@+id/editText_a" android:textSize="18sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:layout_marginTop="30dp" android:id="@+id/editText_a"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="18dp" android:id="@+id/editText_n" android:layout_below="@+id/editText_N"
            android:layout_toEndOf="@+id/textView4" android:textAlignment="center"/>
    <TextView
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textSize="18sp" android:layout_alignBaseline="@+id/editText_x"
            android:layout_alignBottom="@+id/editText_x" android:layout_alignStart="@+id/textView4"/>
    <Button
            android:text="Interpolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp" android:id="@+id/button_interpolation"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_interpolation_result"
            android:textSize="18sp" android:text="Interpolation" android:textAlignment="center"
            android:layout_below="@+id/editText_x" android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" android:textStyle="normal|bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_function_result"
            android:textSize="18sp"
            android:text="Function" android:textAlignment="center"
            android:layout_below="@+id/textView_interpolation_result" android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" android:textStyle="normal|bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_error"
            android:textSize="18sp"
            android:textAlignment="center" android:text="Error"
            android:layout_below="@+id/textView_function_result" android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" android:textStyle="normal|bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="18dp" android:id="@+id/editText_x"
            android:textAlignment="center"
            android:inputType="numberSigned|numberDecimal" android:layout_below="@+id/editText_n"
            android:layout_toEndOf="@+id/textView5"/>
</RelativeLayout>